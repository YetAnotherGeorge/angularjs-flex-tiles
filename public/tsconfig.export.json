  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [ "es2022", "DOM" ],
    "noImplicitAny": true,
    "module": "ES2022", // if not set to commonjs, there will appear errors when using the import syntax sometimes
    "target": "es2022",
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*.ts"
  ]
}